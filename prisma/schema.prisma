generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WeighIn {
  id                String   @id @default(cuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @default(now())
  date              DateTime
  weight            Decimal
  bodyFatPercentage Decimal?
}

model Goal {
  id                String   @id @default(cuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @default(now())
  targetDate        DateTime
  weight            Decimal
  bodyFatPercentage Decimal?
}
